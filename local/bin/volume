#!/bin/bash

arg=$1

case $arg in
  up)
    amixer --quiet set Master 5%+
    ;;
  down)
    amixer --quiet set Master 5%-
    ;;
  *)
    echo "$1: wrong argument"
    ;;
esac
[[ $(amixer get Master|grep %) =~ \[([0-9]+)%\] ]]
level=${BASH_REMATCH[1]}

emoji=ðŸ”‡
if [ $level -gt 0 ]; then
  emoji=ðŸ”ˆ
fi
if [ $level -gt 33 ]; then
  emoji=ðŸ”‰
fi
if [ $level -gt 66 ]; then
  emoji=ðŸ”Š
fi
notify-send -u low "$emoji $level%"
