#!/usr/bin/env bash

shopt -s nullglob globstar

# If this program is named xpass, set default arguments
if [[ $(basename $0) == "xpass" ]]; then
	set -- "--type" "--xfilter" "$@"
fi

action="show"
typeit=0
xfilter=0
while [[ -n $1 ]]; do
	case "$1" in
		'--type')
			typeit=1
			shift
			continue
		;;
		'--xfilter')
			xfilter=1
			shift
			continue
		;;
		'otp')
			action="otp"
			shift
			continue
		;;
		*)
			echo "$1: unexpected argument" >&2
			exit 1
		;;
	esac
done

# Get all entries
prefix=${PASSWORD_STORE_DIR-~/.password-store}
password_files=( "$prefix"/**/*.gpg )
password_files=( "${password_files[@]#"$prefix"/}" )
password_files=( "${password_files[@]%.gpg}" )
entries=$(printf '%s\n' "${password_files[@]}")

# Filter entries with the window manager attributes
if [[ $xfilter -eq 1 ]]; then
	windowid=$(xdotool getwindowfocus)
	wmclass=$(xprop -id $windowid WM_CLASS | cut -d'"' -f2 | tr -cd "[:alnum:] -")
	wmname=$(xprop -id $windowid WM_NAME | cut -d'"' -f2 | tr -cd "[:alnum:] -")
	entries=$(grep -P "($wmclass|$wmname)" <<< "$entries")
fi

# Skip dmenu if there is less than one choice
if [[ $(grep -c . <<< "$entries") -gt 1 ]]; then
	entry=$(dmenu <<< "$entries")
else
	entry=$(head -n1 <<< "$entries")
fi

[[ -n $entry ]] || exit

if [[ $typeit -eq 0 ]]; then
	pass "$action" -c "$entry" 2>/dev/null
	if [ $? == 0 ]; then
		notify-send "passmenu" "Copied $entry to clipboard. Will clear in 45 seconds."
	else
		notify-send "passmenu" "Error: could not fetch $entry from the password store."
	fi
else
	pass "$action" "$entry" | { IFS= read -r pass; printf %s "$pass"; } |
		xdotool type --clearmodifiers --file -
fi
