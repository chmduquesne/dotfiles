#!/bin/bash

SESSIONSDIR=$HOME/.dtach

err(){
  >&2 echo "$@"
}

new(){
  session="$1-$(date +%Y-%m-%d_%H:%M:%S)"
  dtach -A $SESSIONSDIR/$session env DTACH=1 "$@"
}

join(){
  session=$(ls -1 $SESSIONSDIR | fzf --prompt "Select session to join")
  [ $? == 0 ] && dtach -a "$SESSIONSDIR/$session"
}

_kill(){
  session=$(ls -1 $SESSIONSDIR | fzf --prompt "Select session to kill")
  [ $? != 0 ] && return
  sockinfo=$(ss -xlpH src "$SESSIONSDIR/$session" | awk -F' ' '{print $NF}')
  [ -z "$sockinfo" ] && \
    err "Could not identify process for $session" && return
  pid=$(echo "$sockinfo" | awk -F, '{print $2}' | sed 's/pid=//')
  kill $pid
}

loop(){
  while true; do
    read -n1 -p "(J)oin | (k)ill | (n)ew | (q)uit " choice
    case $choice in
      j)
        join
        ;;
      k)
        _kill
        ;;
      n)
        new $(basename $SHELL)
        ;;
      q)
        break
        ;;
      "")
        join
        ;;
      *)
        echo "Could not interpret choice"
        ;;
    esac
    clear
    [ -z "$(ls -1 $SESSIONSDIR)" ] && err "No session left" && break
  done
}

if [ -n "$DTACH" ]; then
  err "You are already within a session"
  exit 1
fi

if [ -n "$1" ]; then
  new "$@"
elif [ -z "$(ls -1 $SESSIONSDIR)" ]; then
  new "$(basename $SHELL)"
fi

loop
