#!/bin/bash

SESSIONSDIR=$HOME/.dtach

err(){
  >&2 echo "$@"
}

new(){
  session="$1-$(date +%Y-%m-%d_%H:%M:%S)"
  dtach -Az "$SESSIONSDIR/$session" env DTACH=1 "$@"
  #echo "$session"
}

join(){
  session=$(ls -1 $SESSIONSDIR | fzf --prompt "Select session to join")
  [ $? == 0 ] && dtach -az "$SESSIONSDIR/$session"
  #echo "$session"
}

join_last(){
  session=$(ls -1 $SESSIONSDIR | sort | tail -n1)
  [ $? == 0 ] && dtach -az "$SESSIONSDIR/$session"
  #echo "$session"
}

_kill(){
  session=$(ls -1 "$SESSIONSDIR" | fzf --prompt "Select session to kill")
  [ $? != 0 ] && return
  sockinfo=$(ss -xlpH src "$SESSIONSDIR/$session" | awk -F' ' '{print $NF}')
  [ -z "$sockinfo" ] && \
    err "Could not identify process for $session" && return
  pid=$(echo "$sockinfo" | awk -F, '{print $2}' | sed 's/pid=//')
  kill $pid
}

no_session(){
  [ -z "$(ls -1 $SESSIONSDIR)" ]
}

finished(){
  ! [ -S "$SESSIONSDIR/$1" ]
}

loop(){
  while true; do
    #if [ -n "$curr_session" ] && finished "$curr_session"; then
    #  join_last
    #  continue
    #fi
    prompt="(J)oin | (k)ill | (n)ew | (q)uit "
    if no_session; then
      prompt="(N)ew | (q)uit "
    fi
    read -n1 -p "$prompt" choice
    if no_session; then
      case $choice in
        j|k)
          choice="invalid"
          ;;
        "")
          choice="n"
          ;;
      esac
    fi
    case $choice in
      j)
        join
        #curr_session=$(join)
        ;;
      k)
        _kill
        #curr_session=$(_kill)
        ;;
      n)
        new $(basename $SHELL)
        #curr_session=$(new $(basename $SHELL))
        ;;
      q)
        break
        ;;
      "")
        join
        #curr_session=$(join)
        ;;
      *)
        echo "Invalid choice"
        ;;
    esac
    echo -e "\033[1K"
    if no_session; then
      err "No session left"
      break
    fi
  done
}

if [ -n "$DTACH" ]; then
  err "You are already within a session"
  exit 1
fi

if [ -n "$1" ]; then
  #curr_session=$(new "$@")
  new "$@"
fi

loop
