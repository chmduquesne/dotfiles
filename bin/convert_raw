#!env sh
#
# Adapted from pentax forum:
# http://www.pentaxforums.com/forums/digital-processing-software-printing/71669-ufraw-imagemagick-batch-conversion-k10d.html
#
# Usage: convert_dng.sh format file1.dng file2.dng ...
#

EXT=$1
shift

QUALITY=100
if [ x$EXT = xJPG ] ; then
    QUALITY=95
fi

# Get the number of files to process
NARGS=$#
N=0

for i in "$@"; do
    # For yad to print progress
    let "PERCENT=N*100/NARGS"
    echo $PERCENT
    echo "#$i"

    BNAME=$(basename $(basename $i .DNG) .PEF)

    ufraw-batch \
        --output=$BNAME.$EXT \
        --embedded-image \
        --overwrite \
        --out-type=jpg \
        $i
    exiftool \
        -TagsFromFile "$i" \
        -overwrite_original \
        --orientation \
        $BNAME.$EXT

    # Increase the number of files
    let "N=N+1"
done \
| yad \
    --width 300 \
    --center \
    --title "Creating JPG..." \
    --text="Creating JPG..." \
    --progress \
    --auto-close \
    --auto-kill \
    --button=gtk-stop
