URxvt.keysym.Mod4-y:                    perl:clipboard:copy
URxvt.keysym.Mod4-p:                    perl:clipboard:paste
URxvt.clipboard.copycmd:                xclip -i -selection clipboard && notify-send "In clipboard" "$(xclip -o -selection clipboard)"
URxvt.clipboard.pastecmd:               xclip -o -selection clipboard
